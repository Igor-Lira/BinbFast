extends layout

block title
  title binb :: User track Leaderboard 


block sections
  section
    .row
      .span7.offset1
        .highscores #{user} : High Scores
          .icons.img
  section
    .row
      .span7.offset1.relative
        h4 Tracks
        .leaderboard-wrapper
          table.table.table-striped.table-bordered.leaderboard
            tbody
              each user, i in tracks 
                tr
                  td #{tracks[i][0]}
                  td #{tracks[i][1]}
          .loading
            .loading-block
            .loading-block
            .loading-block
      .span7.relative

block scripts
  script(src="//cdn.jsdelivr.net/jquery/3/jquery.min.js")
  script(src="/static/js/leaderboards.min.js")
